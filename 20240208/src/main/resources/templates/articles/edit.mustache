{{>./layouts/header}}

{{#article}}
<form class="container p-5" action="/articles/update" method="post">
	<!-- 수정할 글의 id를 컨트롤러로 전달하기 위해 hidden으로 추가한다. -->
	<input type="hidden" name="id" value="{{id}}"/>
	<div class="mb-3">
		<label for="title" class="form-label">제목</label>
		<input type="text" class="form-control" id="title" name="title" value="{{title}}"/>
	</div>
	<div class="mb-3">
		<label for="content" class="form-label">내용</label>
		<textarea class="form-control" id="content" rows="5" name="content" 
			style="resize: none;">{{content}}</textarea>
	</div>
	<button type="submit" class="btn btn-primary">수정하기</button>
	
	<!-- 목록으로 돌아가는 링크 추가 -->
	<a href="/articles/{{id}}" class="btn btn-success">돌아가기</a>
	<a href="/articles" class="btn btn-success">목록으로</a>
</form>
{{/article}}

{{>./layouts/footer}}